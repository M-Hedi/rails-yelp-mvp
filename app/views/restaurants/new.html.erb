<!-- app/views/restaurants/_form.html.erb -->
<%= simple_form_for(@restaurant) do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.input :category,
    :as => :grouped_select,
    :collection => [[["chinese", "italian", "japanese", "french", "belgian"]]],
    :group_method => :last %>
  <%= f.submit %>
<% end %>
